rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.resource.data.keys().hasAll(['text','image','tags','createdAt','likesCount','commentsCount']) &&
                    request.resource.data.text is string &&
                    request.resource.data.text.size() <= 5000 &&
                    (request.resource.data.image == null || request.resource.data.image is string) &&
                    request.resource.data.likesCount == 0 &&
                    request.resource.data.commentsCount == 0;
      allow update: if false; // counters updated by server functions only
      allow delete: if false;
    }
    match /posts/{postId}/likes/{deviceId} {
      allow read: if true;
      allow create: if request.resource.data.keys().hasOnly(['createdAt']) && request.resource.data.createdAt == request.time;
      allow delete: if false;
    }
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      allow create: if request.resource.data.text is string && request.resource.data.text.size() <= 1000;
      allow delete: if false;
    }
  }
}
